<%= form_with(model: task, local: true) do |f| %>
  <% if task.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% task.errors.full_tasks.each do |tsk| %>
            <li><%= tsk %></li>
          <% end %>
        </ul>
      </div>
  <% end %>


  <%= f.label :text, 'status' %>
  <%= f.text_field :text %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>